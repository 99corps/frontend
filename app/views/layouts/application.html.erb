<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>
<% if @publication %>
      <%= @publication.alternative_title.nil? ? @publication.alternative_title : @publication.title %> |
      <% unless @publication.section.nil? or @publication.section == ''%>
      <%= @publication.section %> |
<% end %>
      Beta.gov.uk
<% else %>
      <%= yield :title %>
<% end %>
  </title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/publisher.css" />
<% if @publication %>
  <% if @publication.overview and @publication.overview != '' %>
    <meta name="description" content="<%= @publication.overview %>">
  <% end %>
<% else %>
  <%= yield :description %>
<% end %>
  <%= javascript_include_tag '/javascripts/jquery.mustache.js' %>
  <%= yield :extra_javascript %>
</head>
<body>
<% if @publication %>
  <div id="wrapper" class="<%= @publication.type %>">
<% else %>
  <div id="wrapper" class="<%= yield :wrapper_class %>">
<% end %>
<%= yield %>
<script type="text/javascript" charset="utf-8">
        var api_host = '<%= api_host %>';
</script>
 </div>
</body>
</html>
