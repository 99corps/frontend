<% if @artefact %>
<!-- related -->
<div class="related-positioning">
	<div class="related-container">

		<div class="related">
			<div class="inner group">
				<h2>Related tools &amp; topics</h2>
				<nav role="navigation">
				  <ul>
				      <% @artefact.related_items.each do |item| %>
				      <li class="<%= item.artefact.kind %>">
				        <%= link_to item.artefact.name, item.artefact.slug %>
				      </li>
              <% end %>
				      <% if @artefact.section %>
				        <li class="related-topic"><a href="/<%= @artefact.section.parameterize %>">View more in <span><%= @artefact.section %>&rarr;</span></a></li>
				      <% end %>
				  </ul>
				</nav>
	   </div>
	 </div>

	</div>
</div>
<!-- end related -->
<% end %>