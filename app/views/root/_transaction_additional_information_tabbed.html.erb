<nav class="js-tabs nav-tabs" role="navigation">
  <ul>
    <% if presenter.before_you_start? %><li class="active"><a href="#before-you-start">Before you start</a></li><% end %>
    <% if presenter.what_you_need_to_know? %><li><a href="#what-you-need-to-know">What you need to know</a></li><% end %>
    <% if presenter.other_ways_to_apply? %><li><a href="#other-ways-to-apply">Other ways to apply</a></li><% end %>
  </ul>
</nav>

<div class="js-tab-content tab-content">
  <% if presenter.before_you_start? %>
    <article class="js-tab-pane tab-pane" id="before-you-start">
      <header class="visuallyhidden">
        <h1>Before you start</h1>
      </header>
      <%= to_govspeak(transaction.more_information) %>
    </article>
  <% end %>

  <% if presenter.what_you_need_to_know? %>
    <article class="js-tab-pane tab-pane" id="what-you-need-to-know">
      <header class="visuallyhidden">
        <h1>What you need to know</h1>
      </header>
      <ul class="helpers group">
        <% if transaction.minutes_to_complete.present? %>
          <li>Takes around <span><%= transaction.minutes_to_complete %></span> minutes</li>
        <% end %>

        <% transaction.expectations.each do |e| %>
          <li class="<%= e.css_class %>"><%= e.text %></li>
        <% end %>
      </ul>
    </article>
  <% end %>

  <% if presenter.other_ways_to_apply? %>
    <article class="js-tab-pane tab-pane" id="other-ways-to-apply">
      <header class="visuallyhidden">
        <h1>Other ways to apply</h1>
      </header>
      <%= to_govspeak(transaction.alternate_methods) %>
    </article>
  <% end %>
</div>
