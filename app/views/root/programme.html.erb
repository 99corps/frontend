<% @is_overview = (@partslug != "further-information") %>
<% content_for :extra_javascript do %>
	<%= javascript_include_tag 'jquery.tabs.js', 'jquery.history.js', :defer=>"defer" %>
  <% if @programme.has_next_part?(@part) %>
	  <%= javascript_include_tag 'programmes.js', :defer=>"defer" %>
  <% end %>
	<!--script src="/javascripts/recently-viewed.js" type="text/javascript"></script-->
<% end %>

<section id="content" role="main" class="group">

  <header class="group">
    <hgroup>
      <h1><span>Benefits &amp; schemes </span><%= @programme.title %></h1>
    </hgroup>
  </header>

	<div class="article-container group">

		<nav class="programme-switcher group" role="navigation">
			<ul>
	      <li<%= raw(' class="active"') if @is_overview %>><a href="<%= guide_path(@programme.slug,nil,@edition) %>">About and how to claim</a></li>
	      <% if has_further_information?(@programme) %>
				<li<%= raw(' class="active"') unless @is_overview %>><a href="<%= guide_path(@programme.slug, @programme.parts.last.slug,@edition) %>"><%= @programme.parts.last.title %></a></li>
				<% end %>
			</ul>
		</nav>

		<% unless @is_overview %>
		  <article role="article" class="group">
	        <div class="inner">
	          <%= render :partial => "programme_part", :locals => {:part => @programme.parts.last} %>
	          <nav class="part-pagination return-to-top" role="navigation">
						<a href="<%= guide_path(@programme.slug,nil,@edition) %>">&larr; Overview and how to claim</a>
					</nav>
	        </div>
		  </article>
	    <% else %>
	      <nav class="programme-progression group" role="navigation">
			<ol>
		    <% @programme.parts.each do |part| %>
		      <% if @programme.has_next_part?(part) %>
	            <li><a href="#<%= part.slug %>"><%= part.title %><span class="progressor"></span></a></li>
	          <% end %>
	        <% end %>
	      </ol>
				</nav>
		  <% @programme.parts.each do |part| %>
		    <% if @programme.has_next_part?(part) %>
				  <article role="article" class="with-parts-nav group" id="<%= part.slug %>">
	            <div class="inner">
	              <%= render :partial => "programme_part", :locals => {:part => part} %>
							<nav class="part-pagination return-to-top">
								<a href="#wrapper">Return to top &uarr;</a>
							</nav>
	            </div>
				  </article>
		    <% end %>
		  <% end %>
		<% end %>

	</div>
</section>

<!-- related -->
<div class="related-positioning">
	<div class="related-container">

   		<div class="related">
		     <div class="inner group">
		       <h2>Related tools &amp; topics</h2>
		       <nav role="navigation">
		         <ul>
               <%= (@programme.related_items||"").html_safe %>
               <% if @programme.section %>
                 <li class="related-topic"><a href="/<%= @programme.section.parameterize %>">View more in <span><%= @programme.section %></span>&rarr;</a></li>
               <% end %>
		         </ul>
		       </nav>
		     </div>
		   </div>

	</div>
</div>
<!-- end related -->