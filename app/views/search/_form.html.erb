<form action="/search" method="get" accept-charset="utf-8" class="search-header search-header-2 js-search-hash" role="search">
  <% if params[:government] %>
    <%= hidden_field_tag :government, params[:government] %>
  <% end %>
  <%= hidden_field_tag :tab, @results_tab if @results_tab %>
  <fieldset>
    <legend class="visuallyhidden">Search gov.uk</legend>

    <label for="search-main">
      <%- if @count_results && @count_results.any? -%>
        <h1 class="visuallyhidden">Search results for</h1>
      <%- else -%>
        <h1>What are you looking for?</h1>
      <%- end -%>
    </label>

    <input type="search" name="q" value="<%= @search_term %>" id="search-main" /> <button type="submit" class="button">Search</button>
  </fieldset>
</form>
